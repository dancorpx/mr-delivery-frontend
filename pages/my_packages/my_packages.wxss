/* pages/my_packages/my_packages.wxss */
/* tabs */
.tabs {
position: fixed;
display: flex;
height: 8vh;
/* width: 100%; */
justify-content: space-evenly;
z-index: 1;
}

.tab.active {
  flex: 1;
  width: 33vw;
  color: black;
  background: lightgray;
  text-align: center;
  padding-top: 10px;
}
.tab {
  background: white;
}
.myDeliveries {
  flex: 1;
  width: 33vw;
  text-align: center;
  padding-top: 10px;
}
.index {
  flex: 1;
  width: 34vw;
  text-align: center;
  padding-top: 10px;
}
/* tabs */

/* section titles */
.section-title {
  color: white;
  font-weight: bolder;
  text-align: center;
  border-bottom: 2px solid white;
  margin:20rpx;
}
/* section titles */

/* card style */
.card-outer-border {
  margin: 10rpx;
  /* border: 0.5rpx solid rgb(145, 145, 145); */
  border-radius: 3rpx;
  padding-bottom: 5rpx;
  background-color: white;
  box-shadow: 7rpx 5rpx lightgray;
}

.row-1 {
  height: 124rpx; 
  display: flex;
  align-ites: center
}

.row-2 {
  height: 76rpx;
  position: relative
}


.avatar {
  /* justify-content: space-around */
  width: 18%;
  border-radius: 10rpx;
  margin-left: 5rpx;
}
.avatar-img {
  /* justify-content: space-around */
  width: 100%;
  height:100%;
  border-radius: 10rpx;
}

.details {
  width: 50%;
  padding: 5rpx
}

.price {
  width: 32%;
  padding: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.location {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.location-name{
  width: 300rpx;
  height:63rpx;
  overflow:hidden;
  text-overflow: ellipsis;
}

.time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

/* .red-border {
  border: 1px solid red
} */

.location-icon {
  height: 40rpx;
  width: 40rpx;
}

.time-icon {
  height: 40rpx;
  width: 40rpx;
}

.package-icons {
  /* display: flex;
  align-items: center; */
  position: absolute;
  left: 50rpx;
}

.small {
  height: 25rpx;
  width: 25rpx;
}

.medium {
  height: 37rpx;
  width: 37rpx;
}

.large {
  height: 50rpx;
  width: 50rpx;
}

.padding {
  padding-left: 10rpx;
  padding-right: 10rpx
}

.call-button {
  position: absolute;
  right: 10rpx;
  background-color: #FF5D00;
  color: white;
  text-shadow: 2rpx 2rpx rgba(128, 128, 128, 0.4);
  border-radius: 5rpx;
  padding: 8rpx;
}

.cancel-button {
  position: absolute;
  right: 10rpx;
  background-color: red;
  color: white;
  text-shadow: 2rpx 2rpx rgba(128, 128, 128, 0.4);
  border-radius: 5rpx;
  padding: 8rpx;
}

.red {
  border: 1rpx solid red
}

.fade {
  opacity: 0.1;
}
/* card style */

/* add button */
.add-button {
  height: 150rpx;
  width: 150rpx;
  position: fixed;
  left: 50rpx;
  bottom: 50rpx;
  z-index: 3;
}
/* add button */