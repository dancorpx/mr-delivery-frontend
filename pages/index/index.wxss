/**index.wxss**/
.tabs {
position: fixed;
display: flex;
height: 10vh;
/* width: 100%; */
justify-content: space-evenly;
z-index: 1;
}
.tab.active {
  flex: 1;
  width: 33vw;
  color: black;
  background: lightgray;
  text-align: center;
  padding-top: 10px;
}
.tab {
  background: white;
}
.myDeliveries {
  flex: 1;
  width: 33vw;
  text-align: center;
  padding-top: 10px;
}
.myPackages {
  flex: 1;
  width: 34vw;
  text-align: center;
  padding-top: 10px;
}

.flex-display {
  display: flex;
  flex-direction: column
}


.card-outer-border {
  margin: 10px;
  border: 0.5px solid rgb(145, 145, 145);
  border-radius: 3px;
  padding-bottom: 5px;
  background-color: white;
  box-shadow: 3px 1px grey;
}

.row-1 {
  height: 124rpx; 
  display: flex;
  align-ites: center
}

.row-2 {
  height: 76rpx;
  position: relative
}


.avatar {
  /* justify-content: space-around */
  width: 18%;
  padding: 5rpx
}

.details {
  width: 50%;
  padding: 5rpx
}

.price {
  width: 32%;
  padding: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.location {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

.time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-evenly;
}

/* .red-border {
  border: 1px solid red
} */

.location-icon {
  height: 40rpx;
  width: 40rpx;
}

.time-icon {
  height: 40rpx;
  width: 40rpx;
}

.package-icons {
  /* display: flex;
  align-items: center; */
  position: absolute;
  left: 50rpx;
}

.small {
  height: 25rpx;
  width: 25rpx;
}

.medium {
  height: 37rpx;
  width: 37rpx;
}

.large {
  height: 50rpx;
  width: 50rpx;
}

.padding {
  padding-left: 10rpx;
  padding-right: 10rpx
}

.expand-button {
  position: absolute;
  right: 50rpx;
  background-color: #FF5D00;
  color: white;
  text-shadow: 2px 2px rgba(128, 128, 128, 0.4);
  border-radius: 3px;
}

.red {
  border: 1px solid red
}

.fade {
  opacity: 0.1;
}

.add-button {
  height: 150rpx;
  width: 150rpx;
  position: fixed;
  right: 50rpx;
  top: 900rpx;
  z-index: 3;
}
