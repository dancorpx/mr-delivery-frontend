/* pages/post_item/post_item.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding-top: 100rpx;
  padding-bottom: 0rpx;
  box-sizing: border-box;
}
page {
  background-color:#3150F8;
}

.heading {
  color: white;
  font-weight: bold;
  font-size: 80rpx;
  padding-bottom: 30rpx; 
}
/* form style */
.user-input {
  width: 100%;
  margin-bottom: 10rpx;
}

.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(219, 216, 216);
  margin-top:8px;
  border-radius: 0px;
  border-left: 5px solid rgb(252, 223, 156);
}
radio {
  padding: 30rpx;
}
/* Button */
.submit-button {
  background-color: #FF5D00;
  color: white;
  margin-top: 20px;
  width: 200px;
  margin-left: 60px;
  /* box-shadow: 0 8px 6px -6px #000000 ; */
  font-weight: bold;
}
button {
  margin-top:  20rpx;
  border-radius: 0;
}