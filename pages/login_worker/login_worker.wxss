.heading {
  color: white;
  font-weight: bold;
  font-size: 80rpx;
  padding-bottom: 30rpx; 
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 20px;
}
.input-label {
  font-size: 10rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(219, 216, 216);
  margin-top:8px;
  border-radius: 0px;
  border-left: 5px solid rgb(252, 223, 156);
}

/* Buttons */
button {
  border-radius: 0;
}
.button-container {
display: inline-flex;
height: 120rpx;
}
.img-upload {
  /* margin-right: 10rpx;
