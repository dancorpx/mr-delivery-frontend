/* Card Component */
.card-outer-border {
  margin: 10px;
  border: 0.5px solid rgb(145, 145, 145);
  border-radius: 0px;
}
  
.card-header-item {
  background-color: rgb(145, 145, 145);
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
  padding: 15px;
  color: white;
  font-size: 14px;
}
  
.card-line {
  border-top: 0.5px solid rgb(145, 145, 145);
}
  
.card-body-item {
  padding: 15px;
  color: rgb(73, 73, 73);
  font-size: 16px;
  text-align: center;
}
