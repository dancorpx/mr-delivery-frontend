/* Button */
.submit-button {
  /* background-color: #FF5D00; */
  background-color: rgba(57, 207, 57, 0.658);
  color: white;
  margin: 100rpx;
  width: 420rpx;
  /* margin-left: 60px; */
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  font-weight: bold;
}
button {
  border-radius: 0;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
}
.home-location {
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  margin-bottom: 40rpx;
  border-left: 8rpx solid #F2FD9D;
  font-weight: lighter;
  background-color: rgb(230, 228, 228);
  color: grey;
  text-align: left;
}