/* pages/login_user/login_user.wxss */
page {
  background-color: #9FDAF0;
}

.flex-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.whole-page {
  width: 100%;
  height: 100%;
  position: fixed;
  opacity: 1;
  z-index: 3;
  background-color:rgba(0, 95, 160, 0.788);
  display: flex;
  justify-content: space-around;
  align-items: center;
}

swiper-item  image {
  flex: 0 0 auto;
  width: 75vw;
  margin: 7vh 12.5vw;
  min-height: 75vh ;
}

.complete-button{
  position: absolute;
  bottom: 10vw;
  left: 35vw;
  width: 30vw;
  background-color: rgba(57, 207, 57, 0.658);
  color: white;
  text-shadow: 2px 2px rgba(128, 128, 128, 0.4);
  border-radius: 5px;
  padding: 8rpx;
}



.heading {
  color: white;
  font-weight: bold;
  font-size: 80rpx;
  padding-bottom: 30rpx; 
}



/* form style */
form {
  width: 80vw;
}

.user-input {
  width: 100%;
  margin-bottom: 50rpx;
}
/* .input-height {
  height: 20rpx;
}
.input-label {
  font-size: 10rpx;
} */
input {
  padding: 10rpx 0;
  font-size: 35rpx;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  height: 5vh;
  background-color: rgb(230, 228, 228);
  margin-top:8px;
  border-radius: 0px;
  border-left: 5px solid #F2FD9D;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
}

/* Button */
.submit-button {
  /* background-color: #FF5D00; */
  background-color: rgba(57, 207, 57, 0.658);
  color: white;
  margin: 100rpx;
  width: 420rpx;
  /* margin-left: 60px; */
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  font-weight: bold;
}
button {
  border-radius: 0;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
}
.home-location {
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  margin-bottom: 40rpx;
  border-left: 8rpx solid #F2FD9D;
  font-weight: lighter;
  background-color: rgb(230, 228, 228);
  color: grey;
  text-align: left;
}