page {
  background-color: #9FDAF0;
}
.heading {
  color: white;
  font-weight: bold;
  font-size: 80rpx;
  padding-bottom: 30rpx; 
}



/* form style */
form {
  width: 80vw;
}

.user-input {
  width: 100%;
  margin-bottom: 50rpx;
}
