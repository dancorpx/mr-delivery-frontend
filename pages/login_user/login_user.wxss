/* pages/login_user/login_user.wxss */
page {
  background-color: #9FDAF0;
}
.heading {
  color: white;
  font-weight: bold;
  font-size: 80rpx;
  padding-bottom: 30rpx; 
}

/* Card Component */
.card-outer-border {
  margin: 10px;
  border: 0.5px solid rgb(145, 145, 145);
  border-radius: 0px;
}
  
.card-header-item {
  background-color: rgb(145, 145, 145);
  border-top-left-radius: 0px;
  border-top-right-radius: 0px;
  padding: 15px;
  color: white;
  font-size: 14px;
}
  
.card-line {
  border-top: 0.5px solid rgb(145, 145, 145);
}
  
.card-body-item {
  padding: 15px;
  color: rgb(73, 73, 73);
  font-size: 16px;
  text-align: center;
}
  /* Card Component */

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 20px;
}
.input-label {
  font-size: 10rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: rgb(230, 228, 228);
  margin-top:8px;
  border-radius: 0px;
  border-left: 5px solid #F2FD9D;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
}

/* Button */
.submit-button {
  /* background-color: #FF5D00; */
  background-color: rgba(57, 207, 57, 0.658);
  color: white;
  margin: 100rpx;
  width: 420rpx;
  margin-left: 60px;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  font-weight: bold;
}
button {
  border-radius: 0;
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;

}
.home-location {
  box-shadow: 8rpx 8rpx 6rpx -6rpx #000000 ;
  margin-bottom: 40rpx;
  border-left: 8rpx solid #F2FD9D;
  font-weight: lighter;
  background-color: rgb(230, 228, 228);
  color: grey;
  text-align: left;
}